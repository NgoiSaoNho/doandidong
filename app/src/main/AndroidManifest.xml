        <activity
            android:name="khang.ngodinh.doandidong.UI.EditStudentActivity"
            android:exported="true" />
        <activity
            android:name="khang.ngodinh.doandidong.UI.AboutActivity"
            android:exported="true" />
        <activity
            android:name="khang.ngodinh.doandidong.UI.StudentActivity"
            android:exported="true" />
        <activity
            android:name="khang.ngodinh.doandidong.UI.ClassRoomActivity"
            android:exported="true" />
        <activity
            android:name="khang.ngodinh.doandidong.UI.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>